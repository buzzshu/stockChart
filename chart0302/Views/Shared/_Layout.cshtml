<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("應用程式名稱", "Index", "stocks", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse" float="right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "stocks")</li>
                    <li>@Html.ActionLink("k線圖", "Chart", "stocks")</li>
                    <li>@Html.ActionLink("策略", "Strategy", "stocks")</li>
                    <li>@Html.ActionLink("自訂", "Customize", "stocks")</li>
                    <li>@Html.ActionLink("大盤", "StockMarketIndex", "stocks")</li>

                </ul>
                <div>
                    <input type="text" id="stockID" placeholder="股票代號或名稱" onfocus="this.placeholder=' '" onblur="this.placeholder='股票代號或名稱'" />
                    <button id="GoToChart">搜尋</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Buzz</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#GoToChart").click(function (e) {
            e.preventDefault();
            console.log("/stocks/Chart/" + $("#stockID").val());
            window.location = "/stocks/Chart/" + $("#stockID").val();

        });
        
    </script>
</body>
</html>
